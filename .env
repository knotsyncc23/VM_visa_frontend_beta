# =====================================
# VM Visa Frontend - Production Environment  
# Optimized for Coolify Deployment
# =====================================

# API Configuration
# Replace with your backend URL deployed on Coolify
VITE_API_URL=https://vm-visa-backend.your-coolify-domain.com/api

# Socket.IO Configuration
# Replace with your backend URL for WebSocket connections
VITE_SOCKET_URL=https://vm-visa-backend.your-coolify-domain.com

# Application Configuration
VITE_APP_NAME=VM Visa Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Immigration Services Platform

# Environment
VITE_NODE_ENV=production

# API Timeout Configuration
VITE_API_TIMEOUT=30000

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# UI Configuration
VITE_THEME=light
VITE_DEFAULT_LANGUAGE=en

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true

# External Services
# Google Analytics (Optional)
# VITE_GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry Error Tracking (Optional)
# VITE_SENTRY_DSN=https://your-sentry-dsn-here

# Map Service (Optional)
# VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Social Authentication (Optional)
# VITE_GOOGLE_CLIENT_ID=your-google-client-id
# VITE_FACEBOOK_APP_ID=your-facebook-app-id

# Payment Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# CDN Configuration (Optional)
# VITE_CDN_URL=https://cdn.your-domain.com

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_REDIRECT=true

# Performance Configuration
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_LAZY_LOADING=true

# Debug Configuration (Set to false in production)
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=false
